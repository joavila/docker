/var/log/*_err
/var/log/*_out
{
  daily
  compress
  missingok
  copytruncate
  rotate 1
  lastaction
    case $BUCKET in
      "") echo No bucket available;;
       *) for file in /var/log/*.gz; do
           [ -e "$file" ] || continue
           curl --silent --show-error --fail --upload-file "$file" $BUCKET && rm "$file";
          done;;
    esac
  endscript
}
